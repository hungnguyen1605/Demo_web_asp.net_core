@model webDemo.Areas.Admin.Models.LoignViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminlogin.cshtml";
}
<form  asp-controller="Accounts" asp-action="Login" method="post">
    
    <div class="be-content">
        <div class="main-content container-fluid">
            <div class="splash-container">
                <div class="card card-border-color card-border-color-primary">
                    <div class="card-title">
                        @Html.ValidationSummary()
                        @Html.AntiForgeryToken()
                    </div>
                    <div class="card-body">
                            <div class="login-form">
                                <div class="form-group">
                                    <input class="form-control" asp-for="Email" id="username" type="text" placeholder="Username" autocomplete="off">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" id="password"asp-for="Password" type="password" placeholder="Password">
                                </div>
                            </div>
                                    <button class="btn btn-primary btn-block btn-signin" >Sign In</button>
                                    <p>@ViewBag.Error</p>
                            </div>
                    </div>
                </div>
            </div>
        </div>
</form>


